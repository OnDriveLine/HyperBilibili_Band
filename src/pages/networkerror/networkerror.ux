<import name="default-button" src="../../components/DefaultButton/DefaultButton.ux"></import>

<template>
  <div class="page">
    <image style="margin-top: 44px; width: 63px; height: 54px; object-fit: scale-down" src="/common/warning_icon.png"></image>
    <text style="font-weight: 600; font-size: 28px; margin-top: 15px;">{{ $t("networkerror.title") }}</text>
    <text style="font-weight: 600; font-size: 28px; margin-top: 18px; width: 75%">{{ $t("networkerror.sectitle") }}</text>
    <default-button primary="true" margin-top="35px" text="networkerror.retry" @click="Retry"></default-button>
    <default-button margin-top="15px" text="networkerror.downloads" @click="GoSavedContent"></default-button>
    <default-button margin-top="15px" text="networkerror.exit" @click="Exit"></default-button>
    <text style="margin-top: 25px;"></text>
  </div>
</template>

<script>
import router from "@system.router"
export default {
  Retry(){
    router.clear()
    router.replace({
      uri: "pages/splash"
    })
  },
  GoSavedContent(){
    router.push({
      uri: "pages/savedcontent"
    })
  },
  Exit(){
    router.clear()
    router.back()
  }
}
</script>

